background yes
update_interval 1

cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius

default_graph_height 50
default_graph_width 500

double_buffer yes
no_buffers yes
text_buffer_size 2048

gap_x 10
gap_y 7
minimum_size 200 500
maximum_width 200
own_window yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,sticky,skip_taskbar,skip_pager,below
border_inner_margin 0
border_outer_margin 0
alignment tr

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

override_utf8_locale yes
use_xft yes
xftfont caviar dreams:size=8
xftalpha 0.5
uppercase no

default_color FFFFFF
color1 ffffff
color2 ffffff
color3 ffffff
color4 ff0000

lua_load ~/.conky/conky_lunatico.lua
lua_draw_hook_post main


TEXT
${font Ubuntu:bold:size=7}${color4}CONTROL ${hr 1}
${offset 10}${font Ubuntu:bold:size=7}${color1}$sysname $kernel
${offset 10}${font Ubuntu:bold:size=7}${color1}$nodename
${offset 10}${font Ubuntu:bold:size=7}${color1}Uptime: $uptime

${voffset 16}
${offset 68}${cpugraph 20,110 666666 ff0000}${voffset -15}
${offset 45}${font Ubuntu:bold:size=7}${color}CPU
${offset 55}${font Ubuntu:bold:size=7}${color4}${top name 1}${alignr}${top cpu 1}%
${offset 55}${font Ubuntu:bold:size=7}${color1}${top name 2}${alignr}${top cpu 2}%
${offset 55}${font Ubuntu:bold:size=7}${color2}${top name 3}${alignr}${top cpu 3}%
${offset 55}${font Ubuntu:bold:size=7}${color3}${top name 4}${alignr}${top cpu 4}%
${offset 55}${font Ubuntu:bold:size=7}${color4}${running_threads}     Threads

${voffset 30}

${offset 45}${font Ubuntu:bold:size=7}${color}CPU-temp


${voffset 25}
${offset 68}${memgraph 20,110 666666 ff0000}${voffset -15}
${offset 45}${font Ubuntu:bold:size=7}${color}MEM
${offset 55}${font Ubuntu:bold:size=7}${color4}${top_mem name 1}${alignr}${top_mem mem 1}%
${offset 55}${font Ubuntu:bold:size=7}${color1}${top_mem name 2}${alignr}${top_mem mem 2}%
${offset 55}${font Ubuntu:bold:size=7}${color2}${top_mem name 3}${alignr}${top_mem mem 3}%
${offset 55}${font Ubuntu:bold:size=7}${color3}${top_mem name 4}${alignr}${top_mem mem 4}%
${offset 55}${font Ubuntu:bold:size=7}${color3}${top_mem name 4}${alignr}${top_mem mem 5}%

${voffset 20}
${offset 68}${diskiograph 20,110 666666 ff0000}${voffset -15}
${offset 45}${font Ubuntu:bold:size=7}${color}DISK
#${offset 55}${diskiograph 20,150 666666 666666}${voffset -30}
${offset 55}${font Ubuntu:bold:size=7}${color}Used: ${fs_used /}
${offset 55}${font Ubuntu:bold:size=7}${color}Usage: ${diskio}

${voffset 35}
${offset 45}${font Ubuntu:bold:size=8}${color}Battery
${offset 55}${font Ubuntu:bold:size=7}${color4}${battery_time}

${voffset 0}

${voffset 68}
${offset 10}${font Ubuntu:bold:size=7}${color}ETHERNET                              WIRELESS
${offset 10}${color2}${addr enp0s25}                             ${addr wlp3s0}
#${offset 10}${color}Up: $color2${upspeed enp0s25} ${alignr}${color}Down: $color2${downspeed wlp3s0}
#${offset 10}${color}Down: $color2${downspeed enp0s25} ${alignr}${color}Down: $color2${downspeed wlp3s0}


${color4}${hr 1}
${voffset -25}

${if_running spotify} 
${color1}${font Ubuntu:bold:size=7}Spotify - Now Playing:
${alignr}${color1}${font Ubuntu:bold:size=10}${texeci 1 ~/.conky/spotify-song.sh}
${alignr}${color4}${font Ubuntu:bold:size=10}${texeci 1 ~/.conky/spotify-artist.sh}
${alignr}${color1}${font Ubuntu:bold:size=10}${texeci 1 ~/.conky/spotify-album.sh}
${voffset -10}
${color4}${hr 1}
${voffset -100}

${else}
${voffset -70}

${endif}




